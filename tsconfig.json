{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "lib": ["es6"],
        "sourceMap": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "tests",
        "extension.ts"
    ]
}
